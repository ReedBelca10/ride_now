# ========================================
# Configuration Base de Données PostgreSQL
# ========================================
DATABASE_URL="postgresql://utilisateur:motdepasse@localhost:5432/ride_now_db"

# ========================================
# Configuration JWT
# ========================================
JWT_SECRET="votre_clé_secrète_très_longue_et_complexe_ici"
JWT_EXPIRES_IN="1d"

# ========================================
# Configuration Serveur
# ========================================
PORT=3001
NODE_ENV="development"

# ========================================
# Configuration Email - Développement
# ========================================
# Utilise Ethereal (service de test gratuit) pour le développement
ETHEREAL_USER="your-ethereal-email@ethereal.email"
ETHEREAL_PASSWORD="your-ethereal-password"

# ========================================
# Configuration Email - Production
# ========================================
# Décommenter et configurer selon votre service d'email
# Pour Gmail:
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-specific-password"
# SMTP_FROM="noreply@ridenow.com"

# ========================================
# Configuration Frontend URL
# ========================================
FRONTEND_URL="http://localhost:3000"

# ========================================
# Configuration CORS
# ========================================
CORS_ORIGIN="http://localhost:3000"
